@page
@model DotNetMasteryRazor_Temp.Pages.Categories.IndexModel
@{
}
<partial name="_NotificationPartial" />
<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				Category List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="/Categories/Create" class="btn btn-primary">
				 Create New Category
			</a>
		</div>
	</div>
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>
					Category Name
				</th>
				<th>
					Display Order
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model.categorylist.OrderBy(u => u.DisplayOrder))
			{
				<tr>
					<td>@obj.Name</td>
					<td>@obj.DisplayOrder</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-page="/Categories/Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Edit</a>
							<a asp-page="/Categories/Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>