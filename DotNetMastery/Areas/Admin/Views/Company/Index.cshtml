@model List<Company>
<partial name="_Notifications" />
<div class="card shadow my-4 border-0">
	<div class="card-header ml-0 py-3 bg-secondary bg-gradient">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="text-white py-2">
					Company List
				</h1>
			</div>
		</div>
	</div>
	<div class="card-body">
		<div class="row  pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
					<!--create button for specific action-->
					<i class="bi bi-plus-circle-dotted"></i> Create New Company
				</a>
			</div>
		</div>
		<table id="tblData" class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>
						Name
					</th>
					<th class="text-start">
						Phone Number
					</th>
					<th>
						Address
					</th>
					<th class="text-start">
						City
					</th>
					<th>
						State
					</th>
					<th class="text-start">
						Postal Code
					</th>
					<th>

					</th>
				</tr>
			</thead>

			<tbody>
				@foreach (var obj in Model.OrderBy(u => u.Id))
				{
					<tr>
						<td>@obj.Name</td>
						<td class="text-start">@obj.PhoneNumber</td>
						<td>@obj.StreetAddress</td>
						<td class="text-start">@obj.City</td>
						<td>@obj.State</td>
						<td class="text-start">@obj.PostalCode</td>
						<td>
							<div class="w-75 btn-group" role="group">
								<a asp-controller="Company" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
									<i class="bi bi-pencil-square"></i> Edit
								</a>
								<a asp-controller="Company" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
									<i class="bi bi-trash3"></i> Delete
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>

		</table>
	</div>
</div>
@section Scripts {
	<script src="~/js/Product.js"></script>
	<script src="~/js/sweetAlert.js"></script>
}